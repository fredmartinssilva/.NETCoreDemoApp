@model ErrorViewModel
@{
    ViewData["Title"] = Model == null ? "Error": Model.Title;
}

@{
    if (Model == null)
    {
        <h2 class="text-danger">An error occurred while processing your request.</h2>
    }
    else
    {
        <h1 class="text-danger">@Html.Raw(Model.Title)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Message)</h2>
    }
}
